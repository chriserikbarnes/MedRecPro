@using MedRecPro.Models
@using RazorLight.Razor
@inherits RazorLight.TemplatePage<MedRecPro.Models.StructuredBodyDto>
@model StructuredBodyDto
@{
    if (Model?.StructuredBodyView == null)
    {
        return;
    }

    var viewModel = Model.StructuredBodyView;
}
<structuredBody>
    @if (viewModel.HasStandaloneSections)
    {
        foreach (var context in viewModel.StandaloneSectionContexts)
        {
            <component>
                @{
                    await IncludeAsync("_Section", context);
                }
            </component>
        }
    }
    @if (viewModel.HasHierarchicalSections)
    {
        foreach (var context in viewModel.HierarchicalSectionContexts)
        {
            <component>
                @{
                    await IncludeAsync("_Section", context);
                }
            </component>
        }
    }
</structuredBody>