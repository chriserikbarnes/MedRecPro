@using MedRecPro.Models
@using RazorLight.Razor
@using MedRecPro.Helpers
@inherits RazorLight.TemplatePage<MedRecPro.Models.TextListDto>
@model TextListDto
@if (Model != null)
{
    <list listType="@Model.ListType" styleCode="@Model.StyleCode">
        @foreach (var item in Model.TextListItems.OrderBy(i => i.SequenceNumber))
        {
            <item>
                @if (!string.IsNullOrWhiteSpace(item.ItemCaption))
                {
                    <caption>@Raw(item.ItemCaption ?? "")</caption>
                }
                @Raw(item.ItemText ?? "")
            </item>
        }
    </list>
}