@using MedRecPro.Models;
@using MedRecPro.Helpers;
@inherits RazorLight.TemplatePage<MedRecPro.Models.ObservationMediaDto>;
@model ObservationMediaDto;

@if (Model != null)
{
    if (string.IsNullOrWhiteSpace(Model.DescriptionText))
    {
        <observationMedia @SplTemplateHelpers.Attribute("ID", Model.MediaID)>
            <value @SplTemplateHelpers.Attribute("mediaType", Model.MediaType) @SplTemplateHelpers.Attribute("xsi:type", Model.XsiType)>
                <reference @SplTemplateHelpers.Attribute("value", Model.FileName) />
            </value>
        </observationMedia>
    }
    else
    {
        <observationMedia @SplTemplateHelpers.Attribute("ID", Model.MediaID)>
            <text>@Model.DescriptionText?.Trim()</text>
            <value @SplTemplateHelpers.Attribute("mediaType", Model.MediaType) @SplTemplateHelpers.Attribute("xsi:type", Model.XsiType)>
                <reference @SplTemplateHelpers.Attribute("value", Model.FileName) />
            </value>
        </observationMedia>
    }
}