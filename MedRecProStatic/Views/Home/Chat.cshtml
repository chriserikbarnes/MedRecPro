@*
    /**************************************************************/
    /// <summary>
    /// AI Chat Interface View - Provides natural language interaction with MedRecPro.
    /// </summary>
    /// <remarks>
    /// This view implements a self-contained chat interface using vanilla JavaScript
    /// for fast, reliable loading without bundler dependencies.
    /// 
    /// Features:
    /// - Streaming responses with real-time text display
    /// - Thinking process visualization (collapsible blocks)
    /// - Drag and drop file upload for ZIP files
    /// - Markdown rendering with syntax highlighting
    /// - Conversation history management
    /// - Request cancellation support
    /// 
    /// API Endpoints Used:
    /// - GET /api/Ai/context
    /// - POST /api/Ai/interpret
    /// - POST /api/Ai/synthesize
    /// - GET /api/Ai/chat
    /// </remarks>
    /// <seealso cref="MedRecPro.Static.Controllers.HomeController.Chat"/>
*@

@{
    ViewData["Title"] = "AI Assistant";
    Layout = null; // Self-contained page for optimal load performance
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    <title>@ViewData["Title"] - MedRecPro</title>

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
</head>
<body>
    <div id="app" class="chat-container">
        <!-- Context Banner (shown in demo mode) -->
        <div id="contextBanner" class="context-banner" style="display: none;"></div>

        <!-- Header -->
        <header class="chat-header">
            <div class="header-brand">
                <div class="brand-logo">MRP</div>
                <div>
                    <div class="brand-title">
                        MedRecPro AI
                        <span class="version-badge">@ViewBag.Version</span>
                    </div>
                    <div class="brand-subtitle">Pharmaceutical Data Assistant</div>
                </div>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Index", "Home")" class="btn btn-ghost">
                    <svg class="icon"
                         viewBox="0 0 24 24"
                         fill="none"
                         stroke="currentColor"
                         stroke-width="2"
                         stroke-linecap="round"
                         stroke-linejoin="round">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    Home
                </a>
                <button id="clearBtn" class="btn btn-ghost">
                    <svg class="icon"
                         viewBox="0 0 24 24"
                         fill="none"
                         stroke="currentColor"
                         stroke-width="2"
                         stroke-linecap="round"
                         stroke-linejoin="round">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    </svg>
                    Clear
                </button>
            </div>
        </header>

        <!-- Messages Area -->
        <main class="messages-container" id="messagesContainer">
            <!-- Empty state shown when no messages -->
            <div id="emptyState" class="empty-state">
                <div class="empty-state-logo">MedRecPro Ai</div>
                <h2 class="empty-state-title">How can I help you today?</h2>
                <p class="empty-state-description">
                    Ask me about pharmaceutical data, drug labels, or upload SPL files to get started.
                </p>
                <div class="suggestions-grid">
                    <div class="suggestion-card" data-suggestion="What types of data can you help me find?">
                        <div class="suggestion-icon">üîç</div>
                        <div class="suggestion-text">What types of data can you help me find?</div>
                    </div>
                    <div class="suggestion-card" data-suggestion="Show me how to search for drugs by ingredient">
                        <div class="suggestion-icon">üíä</div>
                        <div class="suggestion-text">Search for drugs by ingredient</div>
                    </div>
                    <div class="suggestion-card" data-suggestion="How do I import SPL files?">
                        <div class="suggestion-icon">üìÅ</div>
                        <div class="suggestion-text">How do I import SPL files?</div>
                    </div>
                    <div class="suggestion-card" data-suggestion="What manufacturers are in the database?">
                        <div class="suggestion-icon">üè≠</div>
                        <div class="suggestion-text">Find manufacturers in database</div>
                    </div>
                </div>
            </div>

            <!-- Messages will be rendered here -->
            <div id="messagesWrapper" class="messages-wrapper" style="display: none;"></div>
        </main>

        <!-- Input Area -->
        <footer class="input-area">
            <div class="input-wrapper">
                <!-- File upload area (hidden by default) -->
                <div id="fileDropzone" class="file-dropzone" style="display: none;">
                    <div id="fileList" class="file-list"></div>
                    <div id="dropArea" class="drop-area">
                        <svg class="icon-lg"
                             viewBox="0 0 24 24"
                             fill="none"
                             stroke="currentColor"
                             stroke-width="2"
                             stroke-linecap="round"
                             stroke-linejoin="round">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                            <polyline points="17 8 12 3 7 8"></polyline>
                            <line x1="12" y1="3" x2="12" y2="15"></line>
                        </svg>
                        <span class="drop-text">Drop ZIP files here or click to browse</span>
                    </div>
                    <input type="file"
                           id="fileInput"
                           class="file-input-hidden"
                           accept=".zip,application/zip,application/x-zip-compressed"
                           multiple />
                </div>

                <!-- Input row - Bootstrap-style integrated input group -->
                <div class="input-group">
                    <textarea id="messageInput"
                              class="input-field"
                              placeholder="Send a message..."
                              rows="1"></textarea>
                    <button id="attachBtn"
                            class="input-group-btn attach-btn"
                            title="Attach files">
                        <svg class="icon"
                             viewBox="0 0 24 24"
                             fill="none"
                             stroke="currentColor"
                             stroke-width="2"
                             stroke-linecap="round"
                             stroke-linejoin="round">
                            <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"></path>
                        </svg>
                        <span id="attachBadge"
                              class="attach-badge"
                              style="display: none;">0</span>
                    </button>
                    <button id="sendBtn"
                            class="input-group-btn send-btn btn-primary"
                            title="Send message">
                        <svg class="icon"
                             viewBox="0 0 24 24"
                             fill="none"
                             stroke="currentColor"
                             stroke-width="2"
                             stroke-linecap="round"
                             stroke-linejoin="round">
                            <line x1="22" y1="2" x2="11" y2="13"></line>
                            <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                        </svg>
                    </button>
                    <button id="cancelBtn"
                            class="input-group-btn send-btn btn-danger"
                            style="display: none;"
                            title="Cancel">
                        <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                            <rect x="6" y="6" width="12" height="12" rx="2"></rect>
                        </svg>
                    </button>
                </div>
                <p class="input-hint">Press Enter to send, Shift+Enter for new line</p>
            </div>
        </footer>
    </div>
    <script src="~/js/chat/index.js" type="module" asp-append-version="true"></script>
</body>
</html>
