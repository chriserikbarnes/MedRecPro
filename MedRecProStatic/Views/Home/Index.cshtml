@using MedRecPro.Static.Models
@model PageContent
@{
    ViewData["Title"] = "Home";
    var config = ViewBag.Config as SiteConfig;
}

@* ============================================================
   HERO SECTION
   Large gradient background with bold typography
   ============================================================ *@
<section class="hero-section">
    <div class="hero-background"></div>
    <div class="container hero-container">
        <div class="hero-content animate-fade-in">
            <span class="hero-eyebrow">@Model.Hero!.Eyebrow</span>
            <h1 class="hero-headline">
                <span class="text-gradient">@Model.Hero.Headline</span>
            </h1>
            <p class="hero-subheadline">@Model.Hero.Subheadline</p>
            <div class="hero-actions">
                <a href="@Model.Hero.CtaLink" class="btn-primary-hero">
                    <span>@Model.Hero.CtaText</span>
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
                <a href="@Model.Hero.SecondaryCtaLink" class="btn-secondary-hero">
                    @Model.Hero.SecondaryCtaText
                </a>
            </div>
        </div>
    </div>
</section>

@* ============================================================
   STATS SECTION
   Key metrics displayed in a clean row
   ============================================================ *@
@if (Model.Stats != null && Model.Stats.Any())
{
    <section class="stats-section">
        <div class="container">
            <div class="stats-grid">
                @foreach (var stat in Model.Stats)
                {
                    <div class="stat-item animate-on-scroll">
                        <div class="stat-value">@stat.Value</div>
                        <div class="stat-label">@stat.Label</div>
                        <div class="stat-description">@stat.Description</div>
                    </div>
                }
            </div>
        </div>
    </section>
}

@* ============================================================
   FEATURES SECTION
   Card grid with colored backgrounds
   ============================================================ *@
<section class="features-section" id="features">
    <div class="container">
        <div class="section-header animate-on-scroll">
            <h2 class="section-title">Everything You Need for SPL Management</h2>
            <p class="section-subtitle">Built on FDA standards with modern developer experience</p>
        </div>
        <div class="features-grid">
            @foreach (var feature in Model.Features!)
            {
                <div class="feature-card feature-card--@feature.Color animate-on-scroll">
                    <div class="feature-card-bg"></div>
                    <div class="feature-card-content">
                        <div class="feature-icon-wrapper">
                            <span class="feature-icon">@feature.Icon</span>
                        </div>
                        <h3 class="feature-title">@feature.Title</h3>
                        <p class="feature-description">@feature.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@* ============================================================
   HOW IT WORKS SECTION
   Step-by-step process visualization
   ============================================================ *@
@if (Model.HowItWorks != null)
{
    <section id="index-how-it-works" class="how-it-works-section">
        <div class="container">
            <div class="section-header animate-on-scroll">
                <h2 class="section-title">@Model.HowItWorks.Title</h2>
                <p class="section-subtitle">@Model.HowItWorks.Subtitle</p>
            </div>
            <div class="steps-container">
                @foreach (var step in Model.HowItWorks.Steps!)
                {
                    <div class="step-item animate-on-scroll">
                        <div class="step-number">@step.Number</div>
                        <div class="step-content">
                            <div class="step-icon">@step.Icon</div>
                            <h3 class="step-title">@step.Title</h3>
                            <p class="step-description">@step.Description</p>
                        </div>
                        <div class="step-connector"></div>
                    </div>
                }
            </div>
        </div>
    </section>
}

@* ============================================================
   USE CASES SECTION
   Interactive cards showing capabilities
   ============================================================ *@
@if (Model.UseCases != null)
{
    <section class="use-cases-section" id="use-cases">
        <div class="container">
            <div class="section-header animate-on-scroll">
                <h2 class="section-title">@Model.UseCases.Title</h2>
                <p class="section-subtitle">@Model.UseCases.Subtitle</p>
            </div>
            <div class="use-cases-grid">
                @foreach (var useCase in Model.UseCases.Cases!)
                {
                    <div class="use-case-card use-case-card--@useCase.Color animate-on-scroll">
                        <div class="use-case-bg"></div>
                        <div class="use-case-content">
                            <span class="use-case-icon">@useCase.Icon</span>
                            <h4 class="use-case-title">@useCase.Title</h4>
                            <p class="use-case-description">@useCase.Description</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

@* ============================================================
   API SECTION
   Code-style endpoint showcase
   ============================================================ *@
@if (Model.Api != null)
{
    <section class="api-section" id="api">
        <div class="container">
            <div class="section-header animate-on-scroll">
                <h2 class="section-title">@Model.Api.Title</h2>
                <p class="section-subtitle">@Model.Api.Subtitle</p>
            </div>
            <div class="api-showcase animate-on-scroll">
                <div class="api-terminal">
                    <div class="terminal-header">
                        <span class="terminal-dot terminal-dot--red"></span>
                        <span class="terminal-dot terminal-dot--yellow"></span>
                        <span class="terminal-dot terminal-dot--green"></span>
                        <span class="terminal-title">MedRecPro API</span>
                    </div>
                    <div class="terminal-body">
                        @foreach (var endpoint in Model.Api.Endpoints!)
                        {
                            <div class="api-endpoint">
                                <span class="api-method api-method--@endpoint.Method.ToLower()">@endpoint.Method</span>
                                <span class="api-path">@endpoint.Path</span>
                                <span class="api-desc">@endpoint.Description</span>
                            </div>
                        }
                    </div>
                </div>
                <div class="api-cta">
                    <a href="@(config?.SwaggerUrl)" class="btn-api-docs" target="_blank" rel="noopener">
                        <svg class="btn-icon-left" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                            <polyline points="14 2 14 8 20 8"/>
                            <line x1="16" y1="13" x2="8" y2="13"/>
                            <line x1="16" y1="17" x2="8" y2="17"/>
                            <polyline points="10 9 9 9 8 9"/>
                        </svg>
                        Explore Full API Documentation
                    </a>
                </div>
            </div>
        </div>
    </section>
}

@* ============================================================
   CTA SECTION
   Final call to action with auth buttons
   ============================================================ *@
@if (Model.Cta != null)
{
    <section class="cta-section" id="get-started">
        <div class="cta-background"></div>
        <div class="container">
            <div class="cta-content animate-on-scroll">
                <h2 class="cta-title">@Model.Cta.Title</h2>
                <p class="cta-subtitle">@Model.Cta.Subtitle</p>
                <div class="cta-buttons">
                    <a href="@(config?.AuthUrl)/Microsoft" class="btn-auth btn-auth--microsoft">
                        <svg class="btn-auth-icon" viewBox="0 0 23 23" fill="none">
                            <rect width="11" height="11" fill="#F25022"/>
                            <rect x="12" width="11" height="11" fill="#7FBA00"/>
                            <rect y="12" width="11" height="11" fill="#00A4EF"/>
                            <rect x="12" y="12" width="11" height="11" fill="#FFB900"/>
                        </svg>
                        <span>Sign in with Microsoft</span>
                    </a>
                    <a href="@(config?.AuthUrl)/Google" class="btn-auth btn-auth--google">
                        <svg class="btn-auth-icon" viewBox="0 0 24 24">
                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                        </svg>
                        <span>Sign in with Google</span>
                    </a>
                </div>
                <p class="cta-note">@Model.Cta.Note</p>
            </div>
        </div>
    </section>
}

@section Scripts {
    <script src="~/js/site.js"></script>
}
