{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "MedRecProMCP": "Debug"
    }
  },

  "McpServer": {
    "ServerUrl": "https://localhost:7100",
    "ServerName": "MedRecPro MCP Server (Dev)"
  },

  "MedRecProApi": {
    "BaseUrl": "https://localhost:7001/api",
    "ValidateSslCertificate": false
  },

  "Jwt": {
    "SigningKey": "DevSigningKey_MustBeAtLeast32Characters_ForHmacSha256!",
    "UpstreamTokenEncryptionKey": "DevEncryptKey_MustBeAtLeast32Characters_ForAes256!"
  },

  "OAuth": {
    "Providers": {
      "Google": {
        "ClientId": "your-google-client-id-for-dev",
        "ClientSecret": "your-google-client-secret-for-dev"
      },
      "Microsoft": {
        "ClientId": "your-microsoft-client-id-for-dev",
        "ClientSecret": "your-microsoft-client-secret-for-dev",
        "TenantId": "common"
      }
    }
  }
}
